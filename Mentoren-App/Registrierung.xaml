<Page x:Class="Mentoren_App.Registrierung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mentoren_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registrierung">

    <StackPanel Background="White">

        <TextBlock HorizontalAlignment="Center" FontSize="30">Registrierung</TextBlock>
        <TextBox x:Name="VName" Text="Vorname"></TextBox>
        <TextBox x:Name="NName" Text="Nachname"></TextBox>
        <TextBox x:Name="Mail" Text="E-Mail"></TextBox>
        <TextBox x:Name="pwd" Text="Passwort"></TextBox>
        <TextBox x:Name="pwdBestaetigt" Text="Passwort bestätigen"></TextBox>
        <ComboBox x:Name="RoleSelection" Background="LightGray" Width="100px" Margin="5,0,5,5">
            <ComboBoxItem>Student</ComboBoxItem>
            <ComboBoxItem>Mentor</ComboBoxItem>
        </ComboBox>
        <Button Click="RegistrateUser"  Background="LightGray" Width="100px"  Margin="5,0,5,5">Registrieren</Button>
    </StackPanel>
</Page>
