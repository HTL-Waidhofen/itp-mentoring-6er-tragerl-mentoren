<Page x:Class="Mentoren_App.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mentoren_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <StackPanel Background="White">
        <Menu VerticalAlignment="Top">
            <MenuItem Header="_Menü">
                <MenuItem Header="Info" Click="GoToInfo" />
                <MenuItem Header="Beenden" Click="Shutdown" />
            </MenuItem>
        </Menu>
        <TextBox HorizontalAlignment="Center" FontSize="30">Login</TextBox>
        <TextBox x:Name="LoginMail" Background="LightGray" Width="100px" Text="E-Mail"  Margin="5"></TextBox>
        <TextBox x:Name="LoginPwd" Background="LightGray" Width="100px" Text="Passwort" Margin="5,0,5,5"></TextBox>
        <Button Click="LogUserIn" Background="LightGray" Width="100px"  Margin="5,0,5,5">Login</Button>
        <Button Click="GoToRegistration" Background="LightGray" Width="100px"  Margin="5,0,5,5">Registrieren</Button>
    </StackPanel>
    
</Page>
