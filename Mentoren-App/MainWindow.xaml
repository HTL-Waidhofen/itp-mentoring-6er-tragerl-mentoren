<Window x:Class="Mentoren_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mentoren_App"
        mc:Ignorable="d"
        Title="Mentoren-App" Height="450" Width="800">
    
    <StackPanel>
        <StackPanel.Background>
            <ImageBrush ImageSource=".\Images\gradient.png"/>
        </StackPanel.Background>

        <Menu VerticalAlignment="Top">
            <MenuItem Header="_Menü">
                <MenuItem Header="Einstellungen" Click="GoToSettings"  />
                <MenuItem Header="Logout" Click="Logout"/>
                <MenuItem Header="Info" Click="GoToInfo" />
                <MenuItem Header="Beenden" Click="Shutdown" />
            </MenuItem>
        </Menu>

        
        <Frame x:Name="mainFrame"/>
   

    </StackPanel>
</Window>
