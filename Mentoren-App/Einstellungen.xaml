<Page x:Class="Mentoren_App.Einstellungen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Mentoren_App"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Einstellungen">

    <StackPanel Background="White">

        <TextBox HorizontalAlignment="Center" FontSize="30">Einstellungen</TextBox>
        <GroupBox Header="Profil">
            <StackPanel>
                <TextBox x:Name="VName"></TextBox>
                <TextBox x:Name="NName"></TextBox>
                <TextBox x:Name="ID" IsEnabled="False"></TextBox>
                <TextBox x:Name="Email"></TextBox>
                <Button Click="changeProfileInfo">Ändern</Button>
                <Button Click="deleteProfile">Löschen</Button>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Page>
